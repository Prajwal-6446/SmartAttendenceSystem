@page
@model Biometric_Attendence1.Pages.MIndex1Model
<div class="container p-3 ">
	<div class="row pt-4">
		<div class="col">
			<div class="row ">
				<div class="display-4 form-algerian">
					<h1 class="display-4"> Registered Users </h1>
				</div>
			</div>
			<div class="row justify-content-end">
				<div class="col-5 text-end">
					<span class="btn-item">
						<a asp-page="MCreate1" class="btn btn-primary btn-contain btn-link text-line">
							<i class="bi bi-person-plus-fill"></i> &nbsp; Add New User
						</a>
					</span>
					<span class="btn-item">
						<a asp-page="TIndex2" class="btn  btn-primary btn-contain btn-link text-line">
							<i class="bi bi-person-check-fill"></i> &nbsp; Track User
						</a>
					</span>
					<span class="btn-item">
						<a asp-page="/Index" class="btn btn-primary btn-contain btn-link text-line">
							<i class="bi bi-box-arrow-left"></i> &nbsp; Log Out
						</a>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>

	<br /><br />
	<table id="Data_table" class="table table-bordered table-striped " style="width:100%">
		<thead>
			<tr>
				<th>Name</th>
				<th>Gender</th>
				<th>FingerId</th>
				<th>Date</th>
				<th> </th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.ManageUsers)
			{
				<tr>
					<td width="30%">@obj.Name</td>
					<td width="10%">@obj.Gender</td>
					<td width="10%">@obj.FingerId</td>
					<td width="20%">@obj.Date.ToString("MM-dd-yyyy")</td>
					<td>
						<span class ="col-6 text-end btn-item">
						<a asp-page="MEdit1" asp-route-id="@obj.Id" class="btn btn-primary btn-contain btn-link text-line">
								Edit
								<i class="bi bi-pencil-square"></i>
								</a>
							</span>
							<span class="col-6 text-end ">
								<a asp-page="MDelete1" asp-route-id="@obj.Id" class="btn btn-danger but-contain text-line">
								Delete
								<i class="bi bi-trash3-fill"></i>
							</a>
						</span>
					</td>
				</tr>
			}
		</tbody>
	</table>
@section Scripts{
	<script src="~/js/ManageUser.js"></script>
}
